@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    Layout = "_VendorLayout";
}
@using UmbrellaTrading.ViewModels
@model ProductEditViewModel

<section class="vh-100 ">
    <div class="container-fluid h-custom bg-light" style="border-radius:1rem;box-shadow: 10px 10px 50px 0px gainsboro;">
        <div class="row d-flex justify-content-center align-items-center h-100 ">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://cdn.pixabay.com/photo/2017/03/13/17/26/ecommerce-2140604__340.jpg"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 p-4 ">
                <h2 class="text-uppercase text-center mb-4">Add New Product</h2>
                <form asp-controller="Product" asp-action="Add"  method="post" enctype="multipart/form-data">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Name English</label>
                        <input type="text" name="NameEn" id="form3Example3" class="form-control form-control-lg" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Name Arabic</label>
                        <input type="text" name="NameAr" id="form3Example3" class="form-control form-control-lg" />
                    </div>
                    <div>
                        <label class="form-label" for="">Category</label>
                        <select class="form-select" name="CategoryID" aria-label="Default select example">
                            <option selected>Choose Category</option>
                            @foreach (var i in ViewBag.list)
                            {
                                <option value="@i.CatID">   @i.NameEn     </option>
                            }
                        </select>
                    </div>
                    <br />
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Price</label>
                        <input type="number" name="Price" id="form3Example3" class="form-control form-control-lg" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Quantity</label>
                        <input type="number" name="Quantity" id="form3Example3" class="form-control form-control-lg" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Description</label>
                        <textarea name="Description" id="form3Example3" class="form-control form-control-lg" ></textarea>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                            <label class="form-label" for="form3Example3c">product Images</label>
                            <input type="file" multiple="multiple" asp-for="uploadedimg" class="form-control form-control-lg" id="exampleFormControlFile1">
                        </div>
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input type="submit" class="btn btn-secondary " value="Add Product" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>